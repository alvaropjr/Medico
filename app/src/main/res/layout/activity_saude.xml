<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFF"
    tools:context="com.healthheart.jessica.hhmedic.Activity.SaudeActivity">

    <Button
        android:id="@+id/btnVoltarPrinpal"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="149dp"
        android:layout_height="30dp"
        android:text="Voltar Tela Principal"
        android:textSize="8sp" />


    <ImageView
        android:layout_width="140dp"
        android:layout_height="123dp"
        android:layout_gravity="center"
        app:srcCompat="@drawable/ic_medic_conf" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="5dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="Escolha uma das opções abaixo para add as informações para o paciente"
        android:textSize="20sp"
        android:textColor="#97496d"
        android:textStyle="bold" />

    <Space
        android:layout_width="wrap_content"
        android:layout_height="15dp" />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <!-- CELULAR
      android:layout_width="110dp"
      android:layout_height="94dp"-->

        <!-- TABLET MENOR
           android:layout_width="150dp"
            android:layout_height="134dp"-->

        <ImageButton
            android:id="@+id/imgbntMedicamento"
            android:layout_width="130dp"
            android:layout_height="108dp"
            android:background="@drawable/ic_menu_medica_menor" />


        <ImageButton
            android:id="@+id/imgbntHisDoencaCardi"
            android:layout_width="130dp"
            android:layout_height="108dp"
            android:background="@drawable/ic_hisdoenca_menor" />


    </LinearLayout>

    <Space
        android:layout_width="wrap_content"
        android:layout_height="15dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <!-- TABLET MENOR
    android:layout_width="150dp"
     android:layout_height="134dp"-->

        <!-- CELULAR
              android:layout_width="130dp"
            android:layout_height="108dp"-->

        <ImageButton
            android:id="@+id/imgbntVicio"
            android:layout_width="130dp"
            android:layout_height="108dp"
            android:background="@drawable/ic_vicio_menor" />

    </LinearLayout>


    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.05"
        android:gravity="center"
        android:textColor="@color/colorPrimaryDark"
        android:text="@string/txt_Direitos" />

</LinearLayout>
